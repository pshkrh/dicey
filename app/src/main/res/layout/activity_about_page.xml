<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aboutPage"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        tools:context=".aboutPage" >
        <!-- android:background="@drawable/background" -->

        <include
            layout="@layout/nav_actionbar"
            android:id="@+id/actbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:text="About"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_madeby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_about"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:layout_marginTop="44dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="5sp"
                android:text="Dicey, made by Pushkar Kurhekar."
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_ai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txt_madeby"
                android:layout_alignStart="@+id/txt_madeby"
                android:layout_alignTop="@+id/txt_madeby"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="5sp"
                android:text="This app would not have been possible without Aniruddh Iyer, who designed all the graphics for this app."
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_thanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_ai"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="5sp"
                android:text="Thanks for downloading!"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>


    <include
        layout="@layout/navbar" />

</android.support.v4.widget.DrawerLayout>